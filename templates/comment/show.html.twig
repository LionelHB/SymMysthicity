{% extends 'base.html.twig' %}

{% block title %}Comment
{% endblock %}

{% block pagecontent %}
	<h1>Comment</h1>
	<div class="tableGeneral ShowTable">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ comment.id }}</td>
				</tr>
				<tr>
					<th>Commentaire</th>
					<td>{{ comment.note }}</td>
				</tr>
				<tr>
					<th>Date de création</th>
					<td>{{ comment.creationDate ? comment.creationDate|date('d-m-Y') : '' }}</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="bottomBtnShow">
		<a class="btnToBack" href="{{ path('app_comment_index') }}">Retour</a>

		<a class="btnToBack" href="{{ path('app_comment_edit', {'id': comment.id}) }}">Éditer</a>

		{{ include('comment/_delete_form.html.twig') }}
	</div>

{% endblock %}
