{% extends 'base.html.twig' %}

{% block title %}Nft{% endblock %}

{% block body %}
    <h1>Nft</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nft.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ nft.name }}</td>
            </tr>
            <tr>
                <th>Creator</th>
                <td>{{ nft.creator }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ nft.dateCreation ? nft.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFirstSale</th>
                <td>{{ nft.dateFirstSale ? nft.dateFirstSale|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateLastSale</th>
                <td>{{ nft.dateLastSale ? nft.dateLastSale|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IdentificationKey</th>
                <td>{{ nft.identificationKey }}</td>
            </tr>
            <tr>
                <th>PathNft</th>
                <td>{{ nft.PathNft }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ nft.price }}</td>
            </tr>
            <tr>
                <th>IsPublic</th>
                <td>{{ nft.isPublic ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ nft.quantity }}</td>
            </tr>
            <tr>
                <th>View</th>
                <td>{{ nft.view }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ nft.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_nft_index') }}">back to list</a>

    <a href="{{ path('app_nft_edit', {'id': nft.id}) }}">edit</a>

    {{ include('nft/_delete_form.html.twig') }}
{% endblock %}
