{% extends 'base.html.twig' %}

{% block title %}Liste categories
{% endblock %}

{% block pagecontent %}
	<h1>Liste des Categories</h1>

	<a class="linkCreateNew" href="{{ path('app_category_new') }}">Ajouter cat√©gorie</a>

	<div class="tableGeneral">
		<table>
			<thead>
				<tr>
					<th>{{ knp_pagination_sortable(
                    categories,
                    'Nom',
                    'name')|raw }}</th>
					<th>{{ knp_pagination_sortable(
                    categories,
                    'Description',
                    'description')|raw }}</th>
					<th>{{ knp_pagination_sortable(
                    categories,
                    'Actions',
                    'action')|raw }}</th>
				</tr>
			</thead>

			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.name }}</td>
						<td>{{ category.description }}</td>
						<td class='actionBtnContainer'>
							<a class="actionBtn" href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
							<a class="actionBtn" href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
						</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="pagination">
			{{ knp_pagination_render(categories) }}
		</div>
	

{% endblock %}
