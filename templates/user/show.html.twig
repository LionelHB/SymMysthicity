{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}
{% endblock %}

{% block pagecontent %}
	<h1>{{ user.username }}</h1>
	<div class="tableGeneral ShowTable">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Prénom</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.lastname }}</td>
				</tr>
				<tr>
					<th>Pseudonyme</th>
					<td>{{ user.username }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
			<tr>
					<th>Genre</th>
					<td>{{ user.isMan ? 'Homme' : 'Femme' }}</td>
				</tr>
				<tr>
					<th>Date de naissance</th>
					<td>{{ user.birthdayDate ? user.birthdayDate|date('d-m-Y') : '' }}</td>
				</tr>
			</tbody>
		</table>
	</div>

	<a class="btnToBack" href="{{ path('app_user_index') }}">Retour</a>

	<a class="btnToBack" href="{{ path('app_user_edit', {'id': user.id}) }}">Éditer</a>

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
